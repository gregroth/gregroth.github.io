	journal = {Ecology Letters},
	keywords = {adaptive radiation, community assembly, diversification, ecological opportunity, evolutionary branching, frequency-dependent selection, macroevolution, trophic interaction},
	number = {4},
	pages = {802-813},
	title = {The enrichment paradox in adaptive radiations: Emergence of predators hinders diversification in resource rich environments},
