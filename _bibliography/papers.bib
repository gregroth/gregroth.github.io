@article{Roth2020.11.26.399683,
	abstract = {Multiple natural and artificial oscillator systems achieve synchronisation when oscillators are coupled. The coupling mechanism, essentially the communication between oscillators, is often assumed to be continuous and bidirectional. However, the cells of the presomitic mesoderm synchronise their gene expression oscillations through Notch signalling, which is intermittent and directed from a ligand-presenting to a receptor-presenting cell. Motivated by this mode of communication we present a phase-gated and unidirectional coupling mechanism. We identify conditions under which it can successfully bring two or more oscillators to cycle in-phase. In the presomitic mesoderm we observed the oscillatory dynamics of two synchronizing cell populations and record one population halting its pace while the other keeps undisturbed, as would be predicted from our model. For the same system another important prediction, convergence to a specific range of phases upon synchronisation is also confirmed. Thus, the proposed mechanism accurately describes the coordinated oscillations of the presomitic mesoderm cells and provides an alternative framework for deciphering synchronisation.Competing Interest StatementThe authors have declared no competing interest.},
	author = {Roth, Gregory and Misailidis, Georgios and Tsiairis, Charisios D.},
